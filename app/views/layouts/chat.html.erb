<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
  <title>Chat Window</title>

  <%= javascript_include_tag :defaults %>
  
  <script src="http://js.pusherapp.com/1.5/pusher.min.js"></script>

  <%= javascript_tag do -%>
      var server = new Pusher('ae6ec11529b0cd9b5189', 'chat')
      server.bind('message_sent', function(line) {
       Element.insert("chat_list", { top: line.name+" : : "+line.lines+"<br />" })
      });
  <% end -%>

<style type="text/css" media="screen">
div#chat_window {
	    overflow-y: scroll;
	    height: 400px;
	    	  }
	  div#chat_window ul {
	    list-style: none;
	    text-align: center
	  }
	  div#chat_window li {
	    line-height: 20px;
	  }
	  div#chat_window li span.user {
	    color: #ff9900;
	  }
	  div#chat_window li span.user.self {
	    color: #aa2211;
	  }
	  
	  div#chat_window li.control {
	    text-align: center;
	  }
         div#chat_window li span.time {
	    float: right;
	    margin-right: 5px;
	    color: #aaa;
	    font-family: "Courier New";
	    font-size: 12px;
	  }

	  
</style>

</head>
<body> 

  <%= yield %>

</body>
</html>
